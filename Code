-- Script to rename an object in Workspace

-- Define the path to the target object
local gameFolder = workspace:FindFirstChild("Game")

if gameFolder then
    -- Look for the object with the specified name inside the Game folder
    local targetObject = gameFolder:FindFirstChild("Welcome to RNG Fights! Prepare to be annihilated")
    
    if targetObject then
        -- Rename the object
        targetObject.Name = "Rinns Hub ComeBack???"
        print("Object renamed successfully.")
    else
        print("Target object not found in the Game folder.")
    end
else
    print("Game folder not found in Workspace.")
end


local DrRayLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()

local window = DrRayLibrary:Load("Rinns Hub", "Default")

local tab = DrRayLibrary.newTab("Main Tab", "ImageIdHere")

local autoRollToggle
local goToSafeSpot = false
local fastRollCd = false
local selectedOption = "None"
local autoRollActive = false
local targetPosition = Vector3.new(10.443120002746582, 39.459999084472656, -10.564023971557617)

local function stopAutoRoll()
    if autoRollToggle then
        autoRollToggle:Disconnect()
        autoRollToggle = nil
    end
    
    if not fastRollCd then
        game:GetService("ReplicatedStorage").GameFolder.RollCooldown.Value = 8
    end

    autoRollActive = false
end

local function startAutoRoll()
    game:GetService("ReplicatedStorage").GameFolder.RollCooldown.Value = 0.5

    autoRollToggle = game:GetService("RunService").Stepped:Connect(function()
        local args = {
            [1] = game.Players.LocalPlayer.Name,
            [2] = "Random"
        }

        game:GetService("ReplicatedStorage").EventsFolder.GenerateAttack:FireServer(unpack(args))

        -- Check the selected option in the dropdown
        if selectedOption ~= "None" then
            local player = game.Players.LocalPlayer
            local inventory = player.Backpack:GetChildren()

            for _, item in pairs(inventory) do
                if item.Name == selectedOption then
                    stopAutoRoll()
                    break
                end
            end
        end

        -- Check if "Go to safe spot" is on
        if goToSafeSpot then
            local player = game.Players.LocalPlayer
            player.Character:BreakJoints()
            task.wait(4)

            local character = player.Character or player.CharacterAdded:Wait()
            local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

            local tweenService = game:GetService("TweenService")
            local tweenInfo = TweenInfo.new(5, Enum.EasingStyle.Linear)
            local tween = tweenService:Create(humanoidRootPart, tweenInfo, {CFrame = CFrame.new(targetPosition)})
            
            tween:Play()
        end
    end)

    autoRollActive = true
end

-- Constantly check the dropdown selection to determine if Auto Roll should start or stop
local function monitorSelection()
    while true do
        task.wait(0.1)
        
        if selectedOption == "None" and not autoRollActive then
            startAutoRoll()
        elseif selectedOption ~= "None" and autoRollActive then
            local player = game.Players.LocalPlayer
            local inventory = player.Backpack:GetChildren()

            local found = false
            for _, item in pairs(inventory) do
                if item.Name == selectedOption then
                    found = true
                    stopAutoRoll()
                    break
                end
            end

            if not found and not autoRollActive then
                startAutoRoll()
            end
        end
    end
end

tab.newToggle("Auto Roll", "Auto Rolls For You Settings Below", true, function(toggleState)
    if toggleState then
        startAutoRoll()
    else
        stopAutoRoll()
    end
end)

tab.newDropdown("Stop Auto Rolling When you get", "Stops auto rolling when you get the specific aura", {
    "None",
    "360-NoScope",
    "D E A T H",
    "Divinity",
    "Cyborg",
    "Eternal",
    "Banishment",
    "InfiniLaser",
    "Laser",
    "Orbital Strike",
    "Party",
    "UltraPunch",
    "Time God",
    "SuperCharged",
    "Slap",
    "Singularity",
    "Shockwave",
    "Rock",
    "Rapid",
    "Fire",
    "Randomized",
    "Punch",
    "Rage"
}, function(option)
    selectedOption = option
end)

tab.newToggle("Fast Roll Cd", "Lets You Roll Faster", true, function(toggleState)
    fastRollCd = toggleState
    if toggleState then
        game:GetService("ReplicatedStorage").GameFolder.RollCooldown.Value = 0.5
    elseif not autoRollToggle then
        game:GetService("ReplicatedStorage").GameFolder.RollCooldown.Value = 8
    end
end)

-- Start monitoring the selection to manage Auto Roll
task.spawn(monitorSelection)
